        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Beer.name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Beer.name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Beer.voltage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Beer.voltage)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Beer.volume)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Beer.volume)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Beer.price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Beer.price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Beer.DeadLine)
        </dt>
        <dd class="col-sm-10">
